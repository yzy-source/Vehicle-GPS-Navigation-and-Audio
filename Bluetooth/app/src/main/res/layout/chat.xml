<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id = "@+id/container"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/longtitude"
			android:text="经度"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/latitude"
			android:text="纬度"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:layout_marginLeft="0dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/car_speed"
			android:text="速度"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/oil_mass"
			android:text="油量"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	</LinearLayout>

	<TextView
		android:id="@+id/location_view"
		android:layout_marginTop="50dp"
		android:layout_marginLeft="100dp"
		android:text="位置信息"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<Button
		android:id="@+id/query_button"
		android:layout_marginTop="100dp"
		android:layout_marginLeft="135dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="开始导航"/>

	<LinearLayout
		android:layout_marginTop="150dp"
		android:layout_marginLeft="50dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/music_pattern"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="顺序播放"/>

		<Button
			android:id="@+id/music_change"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="音乐自动档"/>

		<Button
			android:id="@+id/voice_recognize"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="语音识别"/>

	</LinearLayout>

	<Button
		android:id="@+id/whole_introduce"
		android:text="总体介绍"
		android:layout_marginTop="210dp"
		android:layout_marginLeft="135dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="280dp"
		android:layout_marginLeft="0dp"
		android:id="@+id/music_play">

		<Button
			android:layout_width="65dp"
			android:layout_height="35dp"
			android:padding="5dp"
			android:id="@+id/play"
			android:text="播放"
			android:layout_centerInParent="true"/>

		<Button
			android:layout_width="65dp"
			android:layout_height="35dp"
			android:padding="5dp"
			android:text="下一首"
			android:id="@+id/music_next"
			android:layout_toRightOf="@id/play"/>

		<Button
			android:layout_width="65dp"
			android:layout_height="35dp"
			android:padding="5dp"
			android:id="@+id/music_previous"
			android:text="上一首"
			android:layout_toLeftOf="@id/play"/>

		<Button
			android:layout_width="65dp"
			android:layout_height="35dp"
			android:layout_marginBottom="15dp"
			android:id="@+id/music_pause"
			android:text="暂停"
			android:layout_above="@id/play"
			android:layout_alignLeft="@id/play"/>

		<Button
			android:layout_width="65dp"
			android:layout_height="35dp"
			android:id="@+id/music_stop"
			android:text="停止"
			android:layout_below="@id/play"
			android:layout_alignLeft="@id/play"/>


	</LinearLayout>

	<TextView
		android:id="@+id/music_view"
		android:layout_marginTop="330dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

    <RelativeLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:id= "@+id/edit_bottombar"
	  android:layout_alignParentBottom = "true">

        <Button android:id="@+id/btn_disconnect"
			android:layout_width="380dp"
			android:layout_height="wrap_content"  
			android:layout_alignParentLeft ="true"
			android:text="Disconnect"/>
			
		<!---<Button android:id="@+id/btn_msg_send"
			android:layout_width="65dp" 
			android:layout_height="wrap_content"  
			android:layout_alignParentRight ="true"
			android:text="Send"/>
		<EditText
	         android:layout_width="fill_parent"
	      	 android:layout_height = "wrap_content"
	      	 android:layout_toLeftOf="@id/btn_msg_send"
	      	 android:layout_toRightOf="@+id/btn_disconnect"  	      	 
	      	 android:hint = "说点什么呢?"
	      	 android:textSize="15dip"
	      	 android:id = "@+id/MessageText"/>  -->
	</RelativeLayout>

	<!---<ListView
       android:id="@+id/list"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:scrollingCache="false"
       android:divider="#ffc6c6c6"
       android:layout_weight="1.0"
	   android:layout_centerVertical="true"
	   android:layout_alignParentLeft="true"/>      -->
</RelativeLayout>